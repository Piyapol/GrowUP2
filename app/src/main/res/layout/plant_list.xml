<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/imageViewPlant"
            android:layout_margin="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name Plant"
            android:textSize="25sp"
            android:id="@+id/textView_PlantName"
            android:layout_margin="5dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageViewPlant"
            android:layout_toEndOf="@+id/imageViewPlant" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="20sp"
            android:id="@+id/textView_PlantDetail"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/textView_PlantName"
            android:layout_alignLeft="@+id/textView_PlantName"
            android:layout_alignStart="@+id/textView_PlantName" />

</RelativeLayout>